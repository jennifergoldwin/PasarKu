<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:outlineSpotShadowColor="@color/purple_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/template_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:src="@color/purple_200"/>
        <TextView
            android:id="@+id/template_nama_pasar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pasar Beruang"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/template_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Jl. Ikan Duyung, Antariksa, Kec.."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/template_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:drawableStart="@drawable/ic_store"
                android:text=" 20 Toko"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:text="Lihat Pasar"
                android:drawableEnd="@drawable/ic_arrow"/>
        </RelativeLayout>
    </LinearLayout>



</com.google.android.material.card.MaterialCardView>